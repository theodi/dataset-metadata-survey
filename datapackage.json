{
  "name":"Metadata standards",
  "description":"An exploration of the metadata standards that are in use across the web",
  "licenses": [
    {
    "id": "odbl",
    "url": "http://opendatacommons.org/licenses/odbl/"
    }
  ],
  "publishers": [
    {
      "name": "Open Data Institute",
      "web": "http://www.theodi.org"
    }
  ],
  "keywords":[
    "Open Data",
    "Metadata",
    "Linked Data",
    "DCAT",
    "Schema.org",
    "Datapackages"
  ],
  "resources": [
    {
      "path": "metadata.csv",
      "schema": {
        "fields": [
          {
            "id": "Concept",
            "type": "text"
          },
          {
            "id": "Required for certificate?",
            "type": "text",
            "description": "Whether the question can be used to automate parts of the Open Data Certificate"
          },
          {
            "id": "Relates to question",
            "type": "text",
            "description": "The ID of the ODC question the concept refers to"
          },
          {
            "id": "Schema.org",
            "description": "As defined at http://www.w3.org/wiki/WebSchemas/Datasets",
            "type": "text"
          },
          {
            "id": "DCAT",
            "description": "As defined at http://www.w3.org/TR/vocab-dcat/",
            "type": "text"
          },
          {
            "id": "ADMS",
            "description": "As defined at http://www.w3.org/ns/adms",
            "type": "text"
          },
          {
            "id": "VoID",
            "description": "As defined at http://www.w3.org/TR/void/",
            "type": "text"
          },
          {
            "id": "Datapackages",
            "description":"As defined at http://www.dataprotocols.org/en/latest/data-packages.html",
            "type": "text"
          }
        ]
      }
    }, 
    {
      "path": "datastores.csv",
      "schema": {
        "fields": [
          {
            "id": "Catalogue name",
            "description": "Name of the data catalogue",
            "type": "text"
          },
          {
            "id": "URI",
            "description": "URI of the catalogue",
            "type": "text"
          },
          {
            "id": "Vocabulary(s) used",
            "description": "Which vocabularies are used (if any) for metadata",
            "type": "text"
          },
          {
            "id": "Example resource",
            "type": "text"
          },
          {
            "id": "Access method",
            "description": "How the metadata is accessed (i.e. in the header, or via an API)",
            "type": "text"
          },
          {
            "id": "Notes",
            "type": "text"
          }
        ]
      }
    }
  ]
}
